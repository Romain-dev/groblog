{% extends 'EmaGroBlogBundle::layout.html.twig' %}

{% block title %}EmaGroBlogBundle:Blog:detail{% endblock %}

{% block body %}

        {% if status == "success" %}
            <div class="alert alert-success">
              <strong>Félicitation</strong> Votre topic à bien été crée.
            </div>
        {% else %}
            {% if status != "" %}
                <div class="alert alert-danger">
                    {{  status }}
                </div>
            {% endif %}
            <section id="formulaire">
                {{ form_start(form) }}
                    <fieldset>
                        <h2>Ajouter un nouvel article</h2>
                        <ul>
                            <li style="padding-bottom: 30px;">
                                {{ form_row(form.titre) }}
                            </li>
                            <li>
                                {{ form_row(form.content) }}
                            </li>
                        </ul>
                    </fieldset>
                {{ form_end(form) }}
            </section>
        {% endif %}
{% endblock %}
